                            li.page__list_text Backend:
                                ul.page__list
                                        li.page__list_icon
                                            img.apge__img(src="../assets/img/logos/img-php-logo.png")
                            li.page__list_text CMS:
                                ul.page__list
                                        li.page__list_icon
                                            img.apge__img(src="../assets/img/logos/img-wordpress-logo.png")
